  .item-parent:after {
    position: absolute;
    content: "";
    width: 25px;
    height: 2px;
    left: 0;
    top: 50%;
    background-color: #00f;
    transform: translateX(-100%);
  }

  .item-childrens {
    display: flex;
    flex-direction: column;
    justify-content: center;
  }

  .item-child {
    display: flex;
    align-items: flex-start;
    justify-content: flex-end;
    margin-top: 10px;
    margin-bottom: 10px;
    position: relative;
  }

  .item-child:before {
    content: "";
    position: absolute;
    background-color: #0f0;
    right: 0;
    top: 50%;
    transform: translateX(100%);
    width: 25px;
    height: 2px;
  }

  .item-child:after {
    content: "";
    position: absolute;
    background-color: #f00;
    right: -25px;
    height: calc(50% + 22px);
    width: 2px;
    top: 50%;
  }

  .item-child:last-child:after {
    transform: translateY(-100%);
  }

  .item-child:only-child:after {
    display: none;
  }

  .bye-week:before {
    @apply invisible;
  }
  .bye-week:after {
    height: calc(50% + 11px) !important;
  }
</style>
