---
import Layout from "@/layouts/main.astro";
import { entertainment } from "@/data/NightlyEntertainment";
import EventSchedule from "@/components/EventSchedule.tsx";
---

<Layout title="Events">
  <div
    class="via-fair-red flex min-h-screen flex-col bg-gradient-to-r from-red-700 to-red-800"
  >
    {/* Hero Section */}
    <section class="relative flex w-full items-center justify-center">
      <div class="absolute inset-0 z-0">
        <img
          src="/backdrops/events-backdrop.svg"
          alt="Events background"
          class="absolute inset-0 h-full w-full object-cover brightness-50"
        />
      </div>
      <div class="container relative z-10 mx-auto px-4 text-center text-white">
        <div
          class="mx-auto grid max-w-5xl gap-8 rounded-lg py-12 sm:grid-cols-2 md:grid-cols-3"
        >
          {
            entertainment.map((i) => (
              <div class="fade-up flex flex-col items-center space-y-4 rounded-lg border-2 border-amber-200 bg-black/50 p-4">
                <div class="relative h-48 w-48 overflow-hidden rounded-full">
                  <img
                    src={`/entertainment/${i.image}.webp`}
                    width={1600}
                    height={900}
                    alt={i.artist}
                  />
                </div>
                <div class="text-center">
                  <h3 class="text-xl font-bold text-white">{i.artist}</h3>
                  <p class="text-muted text-sm">{i.date}</p>
                </div>
              </div>
            ))
          }
        </div>
      </div>
    </section>

    {/* Schedule Section */}
    <section class="container mx-auto px-4 py-12">
      <!-- <h2
        class="text-center text-3xl font-bold tracking-tighter text-white sm:text-4xl md:text-5xl"
      >
        Fair Schedule Coming soon
      </h2> -->
      <EventSchedule client:load />
    </section>
  </div>
</Layout>
