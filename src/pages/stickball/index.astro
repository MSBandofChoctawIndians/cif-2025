---
import Layout from "@/layouts/main.astro";
import MensBracket from "@/components/brackets/MensBracket.astro";
import WomensBracket from "@/components/brackets/WomensBracket.astro";

interface EventProps {
  id?: string;
  title?: string;
  image: string;
  order?: string;
  alt?: string;
  text?: string;
}

const featuredEvents = [
  {
    id: "mens",
    title: "Men's Division",
    image: "mens",
    order: "order-2 md:order-1",
  },
  {
    image: "/wss.webp",
    alt: "World Series Stickball",
    order: "order-1 md:order-2",
  },
  {
    id: "womens",
    title: "Women's Division",
    image: "womens",
    order: "order-3 md:order-3",
  },
  {
    id: "35plus",
    title: "Men's 35+ Division",
    image: "mens35",
    order: "order-4 md:order-4",
  },
  {
    id: "tulli",
    title: "Tulli Okchi Ishko Division (14-17)",
    image: "tulli",
    order: "order-5 md:order-5",
    text: "text-lg",
  },
  {
    id: "pushmataha",
    title: "Pushmataha Division (10-13)",
    image: "push",
    order: "order-6 md:order-6",
  },
];
---

<Layout title="Stickball">
  <div
    class="flex min-h-screen flex-col bg-gradient-to-r from-neutral-800 via-neutral-600 to-neutral-950"
  >
    {/* Hero Section */}
    <section class="relative flex w-full items-center justify-center">
      <div class="absolute inset-0 z-0">
        <img
          src="/backdrops/stickball-backdrop.svg"
          alt="Stickball background"
          class="absolute inset-0 h-full w-full object-cover brightness-50"
        />
      </div>
      <div class="container relative z-20 mx-auto px-4">
        <div
          class="mx-auto grid max-w-5xl grid-cols-1 gap-8 rounded-lg py-12 sm:grid-cols-2 md:grid-cols-3"
        >
          {
            featuredEvents.map((event: EventProps) =>
              !event.alt ? (
                <a
                  href={`#${event.id}`}
                  class={`fade-up block hover:opacity-70 ${event.order ?? ""}`}
                >
                  <div class="flex h-full flex-col items-center space-y-4 rounded-lg border-2 border-white/50 bg-black/50 p-4">
                    <div class="relative h-48 w-48 overflow-hidden rounded-full">
                      <img
                        src={`/stickball/${event.image}.webp`}
                        width={800}
                        height={800}
                        alt={event.id}
                        class="h-full w-full object-cover"
                      />
                    </div>
                    <div class="text-center">
                      <h3 class="text-xl font-bold text-white">
                        {event.title}
                      </h3>
                    </div>
                  </div>
                </a>
              ) : (
                <img
                  src={event.image}
                  alt={event.alt}
                  width={800}
                  height={800}
                  class={`fade-up block hover:opacity-70 ${event.order ?? ""} h-full w-full`}
                />
              )
            )
          }
        </div>
      </div>
    </section>

    {/* Men's Division */}
    <section id="mens" class="py-12 md:py-24">
      <div class="container mx-auto px-4 text-center">
        <h2
          class="text-3xl font-bold tracking-tighter text-white sm:text-4xl md:text-5xl"
        >
          Men's Division
        </h2>
        <MensBracket />
      </div>
    </section>

    {/* Women's Division */}
    <section id="womens" class="bg-neutral-800 py-12 md:py-24">
      <div class="container mx-auto px-4 text-center">
        <h2
          class="text-3xl font-bold tracking-tighter text-white sm:text-4xl md:text-5xl"
        >
          Women's Division
        </h2>
        <!-- <WomensBracket /> -->
        {/* Placeholder text for Bracket Coming Soon */}
        <p class="mt-4 text-lg text-white">Bracket Coming Soon</p>
      </div>
    </section>

    {/* Men's 35+ Division */}
    <section id="35plus" class="py-12 md:py-24">
      <div class="container mx-auto px-4 text-center">
        <h2
          class="text-3xl font-bold tracking-tighter text-white sm:text-4xl md:text-5xl"
        >
          Men's 35+ Division
        </h2>
        {/* Placeholder text for Bracket Coming Soon */}
        <p class="mt-4 text-lg text-white">Bracket Coming Soon</p>
      </div>
    </section>

    {/* Tulli Okchi Ishko Division */}
    <section id="tulli" class="bg-neutral-800 py-12 md:py-24">
      <div class="container mx-auto px-4 text-center">
        <h2
          class="text-3xl font-bold tracking-tighter text-white sm:text-4xl md:text-5xl"
        >
          Tulli Okchi Ishko Division (14-17)
        </h2>
        {/* Placeholder text for Bracket Coming Soon */}
        <p class={`mt-4 text-lg text-white ${featuredEvents[5].text ?? ""}`}>
          Bracket Coming Soon
        </p>
      </div>
    </section>

    {/* Pushmataha Division */}
    <section id="pushmataha" class="py-12 md:py-24">
      <div class="container mx-auto px-4 text-center">
        <h2
          class="text-3xl font-bold tracking-tighter text-white sm:text-4xl md:text-5xl"
        >
          Pushmataha Division (10-13)
        </h2>
        {/* Placeholder text for Bracket Coming Soon */}
        <p class="mt-4 text-lg text-white">Bracket Coming Soon</p>
      </div>
    </section>
  </div></Layout
>
