---
import Layout from "@/layouts/main.astro";
import { Skeleton } from "@/components/ui/skeleton";

interface EventProps {
  id?: string;
  title?: string;
  image: string;
  order?: string;
  alt?: string;
  text?: string;
  polaroid?: boolean;
}

interface ContestantProps {
  image: string;
  alt: string;
}

const featuredEvents = [
  {
    polaroid: true,
    image: "/princess03.webp",
    alt: "Choctaw Indian Princess Pageant",
    order: "order-2 lg:order-1 lg:-rotate-6",
  },
  {
    image: "/cipp.webp",
    alt: "Choctaw Indian Princess Pageant",
    order: "order-1 lg:order-2 col-span-1 sm:col-span-2 lg:col-span-1",
  },
  {
    polaroid: true,
    image: "/princess05.webp",
    alt: "Choctaw Indian Princess Pageant",
    order: "order-3 lg:order-3 lg:rotate-6",
  },
];

const contestants = [
  {
    image: "1 Annalise",
    alt: "Annalise Nicole Bell",
  },
  {
    image: "2 Teresa",
    alt: "Teresa Willis",
  },
  {
    image: "3 Jaliah",
    alt: "Jaliah Rashad Mingo",
  },
  {
    image: "4 Cambee",
    alt: "Cambee Latrice Johnson",
  },
  {
    image: "5 Dayanara",
    alt: "Dayanara Lopez",
  },
  {
    image: "6 Netiyah",
    alt: "Netiyah Naeshon Thompson",
  },
  {
    image: "7 Lexi",
    alt: "Lexi Rodriguez",
  },
  {
    image: "8 Miyah",
    alt: "Miyah Henry",
  },
  {
    image: "9 Taijah",
    alt: "Taijah Kessinger",
  },
];
---

<Layout title="Pageant">
  <div
    class="flex min-h-screen flex-col bg-gradient-to-r from-purple-800 via-purple-500 to-indigo-950"
  >
    {/* Hero Section */}
    <section class="relative flex w-full items-center justify-center">
      <div class="absolute inset-0 z-0">
        <img
          src="/backdrops/pageant-backdrop.svg"
          alt="Pageant background"
          class="absolute inset-0 h-full w-full object-cover brightness-50"
        />
      </div>
      <div class="container relative z-20 mx-auto px-4">
        <div
          class="mx-auto grid max-w-5xl grid-cols-1 gap-12 rounded-lg py-12 sm:grid-cols-2 sm:gap-8 lg:grid-cols-3"
        >
          {
            featuredEvents.map((event: EventProps) =>
              !event.polaroid ? (
                <img
                  src={event.image}
                  alt={event.alt}
                  width={800}
                  height={800}
                  class={`fade-up block aspect-square ${event.order ?? ""}`}
                />
              ) : (
                <div
                  class={`fade-up mx-auto border-2 border-gray-300 bg-white p-1 sm:max-w-[20rem] ${event.order ?? ""}`}
                >
                  <div class="relative mx-auto mb-4 aspect-[17/19] overflow-hidden bg-black">
                    <img
                      src={`/pageant/${event.image}`}
                      width={800}
                      height={800}
                      alt={event.alt}
                      class="h-full w-full object-cover transition-transform duration-300 hover:scale-105"
                    />
                  </div>
                </div>
              )
            )
          }
        </div>
        <div
          class="fade-up mx-auto mb-12 w-full max-w-5xl rounded-lg bg-gradient-to-r from-purple-700 via-purple-600 to-indigo-800 p-8 text-center text-white backdrop-blur-sm"
        >
          <h2 class="text-lg uppercase tracking-wide">
            2025-2026 Choctaw Indian Princess
          </h2>
          <h1 class="mt-2 text-4xl font-extrabold sm:text-5xl md:text-6xl">
            Lexi Camille Rodriguez
          </h1>
        </div>
      </div>
    </section>

    {/* Pageant Contestants */}
    <section id="mens" class="py-12 md:py-24">
      <div class="container mx-auto px-4 text-center">
        <h2
          class="text-3xl font-bold tracking-tighter text-white sm:text-4xl md:text-5xl"
        >
          Pageant Contestants
        </h2>
        <div class="mt-8 grid grid-cols-1 gap-6 lg:grid-cols-2 xl:grid-cols-3">
          {
            contestants.map((contestant: ContestantProps) => (
              <a
                href={`/pageant/contestants/${contestant.image}.jpg`}
                class="group"
                target="_blank"
              >
                <img
                  src={`/pageant/contestants/${contestant.image}.webp`}
                  alt={contestant.alt}
                  width={600}
                  height={315}
                  class="fade-up w-fulltransition-transform mx-auto block aspect-video duration-300 hover:scale-105"
                />
              </a>
            ))
          }
        </div>
      </div>
    </section>
  </div></Layout
>
